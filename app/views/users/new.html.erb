<h1>Registracija</h1>
<%= form_for(@user) do |f| %>
<!-- <%= render 'form', :f => f %> -->
<%= render 'shared/error_messages'%>
	<div class="field">
		<%= f.label :name, "Uporabniško Ime:" %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email, "e-pošta:" %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password, "Geslo:" %><br />
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation, "Ponovi geslo:" %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="actions">
		<%= f.submit "Registriraj" %>
	</div>
	
<% end %>
